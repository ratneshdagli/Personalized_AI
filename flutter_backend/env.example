# Personalized AI Feed Backend Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///./personalized_ai_feed.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname
DB_ECHO=false

# LLM API Keys
GROQ_API_KEY=your_groq_api_key_here
HF_API_KEY=your_huggingface_api_key_here

# News API
GNEWS_API_KEY=your_gnews_api_key_here
NEWSAPI_KEY=your_newsapi_key_here

# OAuth Credentials (for connectors)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_REDIRECT_URI=http://localhost:8000/api/auth/instagram/callback

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Google Calendar (optional)
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Redis (for background jobs)
REDIS_URL=redis://localhost:6379/0

# Vector Store
VECTOR_INDEX_PATH=./data/vector_index

# Logging
LOG_LEVEL=INFO

# Context ingestion settings
CONTEXT_INGEST_ALLOW_SERVER=true
